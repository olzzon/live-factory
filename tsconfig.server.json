{
	"extends": "./tsconfig.preset.json",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist/server",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"{{PACKAGE-NAME}}": ["./src/server/index.ts"]
		},
		"types": ["node"],
		"declaration": false,
		"skipLibCheck": true
	}
}
